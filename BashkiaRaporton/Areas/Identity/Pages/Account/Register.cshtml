@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Shtepia</a></li>
    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Banore">Banore</a></li>
    <li class="breadcrumb-item active">Register</li>
</ol>
<div class="card">
    <div class="card-header">
        Register
    </div>
    <div class="card-body">
       
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Input.Emri"></label>
                            <input asp-for="Input.Emri" class="form-control" />
                            <span asp-validation-for="Input.Emri" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Mbiemri"></label>
                            <input asp-for="Input.Mbiemri" class="form-control" />
                            <span asp-validation-for="Input.Mbiemri" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Input.PhoneNumber"></label>
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.StatusId"></label>
                            <select class="form-control" asp-for="Input.StatusId" asp-items="@ViewBag.Status"></select>
                            <span asp-validation-for="Input.StatusId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.NjesiaId"></label>
                            <select class="form-control" asp-for="Input.NjesiaId" asp-items="@ViewBag.Njesia"></select>
                            <span asp-validation-for="Input.NjesiaId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
               

                <button type="submit" class="btn btn-primary">Register</button>
            </form>
       
       

    </div>
    </div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
